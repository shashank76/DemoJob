<section class="main-block">
  <div class="container">
    <div class="box">
      <div class="box-head clearfix">
        <div class="col-sm-4 col-xs-12">
          <h3 class="ff">
            Scheduled Interviews
          </h3>
        </div>
      </div>
      <div class="box-body">
        <div class="content-a">
          <div class="row">            
            <div class="col-sm-10 col-sm-offset-1">
              <div class="user-block">
                <% @interviews.each do |interview| %>
                  <div class="block-a clearfix">
                    
                    <div class="request-a middle-a new-middle">
                      <div class="profile-detail">
                        <h4 class="rqst-heading"><%= interview.job.job_title %></h4>
                        <h4><%= interview.job.company_name %></h4>
                        <div class="username-a">Experience: <%= interview.job.experience %></div>
                        <div class="username-a">Salary: <%= interview.job.salary %></div>
                        <h4>Applicant Name: <%= interview.user.name %></h4>
                      </div>
                    </div>
                    <div class="text-center job-right-btn">
                      <div class="add-block text-right">
                        <div class="btn-add m-t-10">
                          <h4><%= interview.interview_time.strftime("%d/%m/%Y %I:%M %p") %></h4>
                        </div>
                      </div>
                    </div>
                  </div>
                <%end%>
                <%= will_paginate @interviews %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>