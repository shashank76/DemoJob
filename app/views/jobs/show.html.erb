<section class="main-block">
	<div class="container">
		<div class="box">
			<div class="box-head">
				<h3>					
					Job Details
				</h3>
				
			</div>
			<div class="box-body">						
				<div class="content-block">
					<div class="detail-form">
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Company Name</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.company_name%>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Job Title</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.job_title %>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Job Location</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.job_location %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Experience(in years)</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.experience%>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Salary(in LPA)</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.salary %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Posted Date</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.updated_at.strftime("%B %d,%Y") %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Job Sector</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.job_sector %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Job Skill</label>
								<div class="col-sm-8 col-md-7">
									<%= @job.skill %>					
								</div>
							</div>
						</div>
						
						
					</div>						
				</div>
			</div>
		</div>
	</div>
</section>	
