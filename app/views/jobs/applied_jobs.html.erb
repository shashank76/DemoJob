<section class="main-block">
  <div class="container">
    <div class="box">
      <div class="box-head clearfix">
        <div class="col-sm-4 col-xs-12">
          <h3 class="ff">
            Applied Jobs
          </h3>
        </div>
      </div>
      <div class="box-body">
        <div class="content-a">
          <div class="row">            
            <div class="col-sm-10 col-sm-offset-1">
              <div class="user-block">
                <% @applied_jobs.each do |job| %>
                  <div class="block-a clearfix">
                    
                    <div class="request-a middle-a new-middle">
                      <div class="profile-detail">
                        <h4 class="rqst-heading"><%= job.job.job_title %></h4>
                        <h4><%= job.job.company_name %></h4>
                        <div class="username-a">Experience: <%= job.job.experience %></div>
                        <div class="username-a">Salary: <%= job.job.salary %></div>
                      </div>
                    </div>
                    <div class="text-center job-right-btn">
                      <div class="add-block text-right">
                        <div class="btn-add m-t-10">
                          <%= link_to "Details", job_path(id: job.job.id), :class => "btn btn-blue link-msg"%>
                          <% if current_user.role.eql?("Organisation") %>
                            <%= link_to 'Schedule Interview', schedule_interview_jobs_path(id: job.id), :class => "btn btn-blue link-msg" %>           
                          <%end%>
                        </div>
                      </div>
                    </div>
                  </div>
                <%end%>
                <%= will_paginate @applied_jobs %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>