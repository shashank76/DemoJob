<section class="main-block">
	<div class="container">
		<div class="box">
			<div class="box-head">
				<h3>					
					My Profile Details
				</h3>
				
			</div>
			<div class="box-body">						
				<div class="content-block">
					<div class="detail-form">
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label"> Name</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.name %>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Email</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.email %>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Address</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.address %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Gender</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.gender%>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Mobile</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.mobile %>					
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<label class="col-sm-4 col-md-3 control-label">Date of Birth</label>
								<div class="col-sm-8 col-md-7">
									<%= current_user.dob.strftime("%B %d,%Y") %>					
								</div>
							</div>
						</div>
						<% if current_user.role.eql?("Organisation")%>
							<div class="form-group">
								<div class="row">
									<label class="col-sm-4 col-md-3 control-label">Company Name</label>
									<div class="col-sm-8 col-md-7">
										<%= current_user.skill %>					
									</div>
								</div>
							</div>
						<%end%>						
					</div>						
				</div>
			</div>
		</div>
	</div>
</section>	
